%body
  #content-outer
    #content
      / start page-heading
      #page-heading
        %h1 Employee Directory
      / end page-heading
      %table#content-table{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
        %tbody
          %tr
            %td#tbl-border-left
            %td
              / start content-table-inner ...................................................................... START
              #content-table-inner
                / start table-content
                #table-content
                  / start message-yellow
                  / end message-yellow
                  :css
                    .all_users
                    {
                    	color: #666;
                    	line-height: 2.4em;
                    	margin: 0px;
                    	width: 350px;
                    	float:left;
                    	overflow:auto;
                    }
                    .all_users .innertxt
                    {
                    	font-size: 0.8em;
                    	color:#666666;
                    	display:inherit;
                    	padding-bottom:25px;
                    }
                    .all_users .innertxt img
                    {
                    	float:left;
                    	border: solid 1px #cccccc;
                    	margin:5px 5px 5px 0;
                    }
                    .all_users .innertxt strong
                    {
                    	color:#666666;
                    	font-size:11px;
                    	font-weight:bold;	
                    }
                    .all_users .innertxt li
                    {
                    	color:#666666;
                    	font-size:11px;
                    	font-weight:normal;
                    	margin:-15px 0 -15px 0;	
                    	text-align:left;
                    	list-style-type:none;
                    }	
                    
                    .shorttext li
                    {
                    	color:#666666;
                    	font-size:11px;
                    	/*margin:-15px 0 -15px 0;	*/
                    	text-align:left;
                    	list-style-type:none;
                    }
                  %table{border: "0", width: "100%"}
                    = form_tag search_result_profiles_path, :method => 'get' do
                      %tbody
                        %tr
                          %td.search_styletd{width: "100%"}
                            .headstyletd Search by Name
                        %tr
                          %td{valign: "top", width: "100%"}
                            %table.producttable1{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                              %tbody
                                %tr.alternate-row
                                  %td
                                    Employee Name :
                                    = text_field_tag :search, params[:search]
                                    = submit_tag "Search", :name => nil
                  / end product-table...................................
                / end content-table
                .clear
              / end content-table-inner ............................................END
            %td#tbl-border-right
          %tr
            %th.sized.bottomleft
            %td#tbl-border-bottom  
            %th.sized.bottomright
      .clear  
      .clear  
    .clear  
  .clear