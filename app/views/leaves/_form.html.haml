.container.leave_container
  .row.box_container
    .col-sm-7
      = form_for @leave do |f|
        .control-group.leave_fields
          = f.label(:date_from, :class => "control-label")
          .controls
            = f.datepicker :date_from, :placeholder => "DD/MM/YYYY", :class => "form-control"
        .control-group.leave_fields
          = f.label(:date_to, :class => "control-label")
          .controls
            = f.datepicker :date_to, :placeholder => "DD/MM/YYYY", :class => "form-control"
        .control-group.leave_fields
          = f.label(:description, :class => "control-label")
          .controls
            = f.text_area :description, :rows => 3, :cols => 29, :placeholder => "Please mention leave reason", :class => "form-control"
        .control-group.leave_fields
          .controls
            = f.submit "Submit", :class => "btn btn-primary save_leave"